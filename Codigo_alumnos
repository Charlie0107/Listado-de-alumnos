    private final int maximo=25;
    private void boton_registroActionPerformed(java.awt.event.ActionEvent evt) {                                             
        
        int cantidad;
        String numero_matricula;
        String nombre;
        String apellido;
        boolean flag;
       
        flag=true;
        while(flag==true){
        cantidad=Integer.parseInt(JOptionPane.showInputDialog("¿Cuantos alumnos desea agregar?:"));
        for (int i = 0; i < 10; i++) {
            registro.add(new ArrayList<>());
            }
        if(cantidad<=maximo){
            for (int i = 0; i < cantidad; i++) {
                numero_matricula=JOptionPane.showInputDialog("Ingrese el numero de matricula del alumno "+(i+1)+" :");
                if (numero_matricula.length()==10) {
                    nombre=JOptionPane.showInputDialog("Ingrese el nombre del estudiante"+(i+1)+" :");
                    apellido=JOptionPane.showInputDialog("Ingrese los apellidos del alumno "+(i+1)+" :");
                    registro.get(0).add(numero_matricula);
                    registro.get(1).add(nombre);
                    registro.get(2).add(apellido);
                }
                else{
                    JOptionPane.showMessageDialog(null,"El numero de matricula tiene que ser de 9 digitos minimo!");
                    flag=false;
                }
            }
            flag=false;
        }
        else{
            JOptionPane.showMessageDialog(null,"El registro tiene un maximo de 40 estudiantes!","ENTRADA",JOptionPane.WARNING_MESSAGE);
            flag=false;
        }
        if(flag==false){
            String pregunta;
            pregunta=JOptionPane.showInputDialog("¿Desea seguir?:(Y/N)");
            if (pregunta.equalsIgnoreCase("Y")) {
                flag=true;
            }
            else{
                flag=false;
            }
        }            
        }
          
    }                                            

    private void boton_buscarActionPerformed(java.awt.event.ActionEvent evt) {                                           
     
        String numero_matricula;
        int posicion;
        boolean flag;
        flag=true;
        while(flag==true){
        numero_matricula=JOptionPane.showInputDialog("Ingrese la matricula del estudiante:");
        if (registro.get(0).contains(numero_matricula)) {
            posicion=registro.get(0).indexOf(numero_matricula);
            JOptionPane.showMessageDialog(null,"¡¡Estudiante encontrado!!:\n"+registro.get(0).get(posicion)+"\n"+registro.get(1).get(posicion)+"\n"+registro.get(2).get(posicion),"BUSQUEDA",JOptionPane.INFORMATION_MESSAGE);
            String pregunta;
            pregunta=JOptionPane.showInputDialog("¿Desea continuar?:(Y/N)");
            if (pregunta.equalsIgnoreCase("Y")) {
                flag=true;
            }
            else{
                flag=false;         
            }
        }
        else{
            JOptionPane.showMessageDialog(null, "¡Estudiante no encontrado!","AVISO",JOptionPane.WARNING_MESSAGE);
            flag=false;
        }
        }
    }                                          

    private void boton_modificarActionPerformed(java.awt.event.ActionEvent evt) {                                              
     
        String numero_matricula;
        int posicion;
        boolean flag;
        flag=true;
        while(flag==true){
        numero_matricula=JOptionPane.showInputDialog(null,"Ingrese el numero de matricula del estudiante que desea modificar:","REGISTRO",JOptionPane.PLAIN_MESSAGE);
        if (registro.get(0).contains(numero_matricula)) {
            posicion=registro.get(0).indexOf(numero_matricula);
            String cambio;
            String cambio_nombre;
            String cambio_apellidos;
            cambio=JOptionPane.showInputDialog("¿Que desea modificar?\nNombre(1)\nApellidos(2)");
            if (cambio.equals("1")) {
                cambio_nombre=JOptionPane.showInputDialog(null,"Ingrese el nuevo nombre a modificar:","REGISTRO",JOptionPane.PLAIN_MESSAGE);
                registro.get(1).remove(posicion);
                registro.get(1).add(posicion,cambio_nombre);
            }
            if (cambio.equals("2")) {
                cambio_apellidos=JOptionPane.showInputDialog("Ingrese un nombre nuevo:");
                registro.get(2).remove(posicion);
                registro.get(2).add(posicion,cambio_apellidos);
            }
            JOptionPane.showMessageDialog(null,"¡Cambio realizado!:\n"+registro.get(0).get(posicion)+"\n"+registro.get(1).get(posicion)+"\n"+registro.get(2).get(posicion));
            String pregunta;
            pregunta=JOptionPane.showInputDialog("¿Desea continuar?:(Y/N)");
            if (pregunta.equalsIgnoreCase("y")) {
                flag=true;
            }
            else{
                flag=false;
            }
        }
        else{
            JOptionPane.showMessageDialog(null, "Estudiante no encontrado!","BUSQUEDA",JOptionPane.WARNING_MESSAGE);
            flag=false;
        }
        }
        
    }                                             

    private void boton_eliminarActionPerformed(java.awt.event.ActionEvent evt) {                                             

        String numero_matricula;
        int posicion;
        boolean flag;
        flag=true;
        while(flag==true){
        numero_matricula=JOptionPane.showInputDialog("Ingrese el numero de matricula del estudiante que desea remover:");
        if (registro.get(0).contains(numero_matricula)) {
            posicion=registro.get(0).indexOf(numero_matricula);
            JOptionPane.showMessageDialog(null,"¡Estudiante encontrado!:\n"+registro.get(0).get(posicion)+"\n"+registro.get(1).get(posicion)+"\n"+registro.get(2).get(posicion));
            String eliminar;
            eliminar=JOptionPane.showInputDialog("¿Desea eliminar al estudiante?:(Y/N)");

            if (eliminar.equalsIgnoreCase("Y")) {
               registro.get(0).remove(posicion);
               registro.get(1).remove(posicion);
               registro.get(2).remove(posicion);
               JOptionPane.showMessageDialog(null, "Estudiante removido!");
            }

            String pregunta;
            pregunta=JOptionPane.showInputDialog("¿Desea seguir?:(Y/N)");
            if (pregunta.equalsIgnoreCase("y")) {
                flag=true;
            }
            else{
                flag=false;
            }
        }
        else{
            JOptionPane.showMessageDialog(null, "¡Estudiante no encontrado!","BUSQUEDA",JOptionPane.WARNING_MESSAGE);
            flag=false;
        }
        }

    }                     

                       

